<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="MenuButtonsNormal">
        <item name="fab_colorNormal">@color/colorPrimaryDark</item>
        <item name="fab_colorPressed">@color/colorPrimary</item>
    </style>

    <style name="textStyleWhite">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="textStyleBlack">
        <item name="android:textColor">#000</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/spl</item>
    </style>


</resources>
